<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:id="@+id/myListview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listview"
            app:layout_constraintBottom_toTopOf="@+id/myRecyclerView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/myRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recyclerview"
            app:layout_constraintBottom_toTopOf="@id/myRecyclerView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myListview"/>

    <Button
            android:id="@+id/myRecyclerView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recyclerview2"
            app:layout_constraintBottom_toTopOf="@id/myRecyclerView3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myRecyclerView"/>

    <Button
            android:id="@+id/myRecyclerView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recyclerview3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myRecyclerView2"/>


</androidx.constraintlayout.widget.ConstraintLayout>